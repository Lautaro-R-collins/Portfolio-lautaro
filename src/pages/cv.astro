    <li>Typescript</li>
    <li>Python</li>
    <li>HTML5</li>
    <li>CSS3</li>
    <li>React</li>
    <li>Astro</li>
    <li>Redux</li>
    <li>Bootstrap</li>
    <li>Tailwind</li>
    <li>SASS</li>
    <li>Node.js</li>
    <li>Express.js</li>
    <li>MongoDb</li>
    <li>Firebase</li>
    <li>GIT</li>
    <li>Visual Studio Code</li>
    <li>MySQL</li>
    <li>Figma</li>
  </ul>
</BaseLayout>
