    projectUrl="https://vegna-tech.onrender.com//"
  
  />
  <div class="divider my-0"></div>
  <HorizontalCardProyect
    title="Portfolio Personal"
    img="https://media.licdn.com/dms/image/D4D2DAQE6YfvJ9eSfbA/profile-treasury-image-shrink_800_800/0/1721084858838?e=1721692800&v=beta&t=LNVhRdauhlWhXCwtn6PSMu5coYxoicufDlxZZANbQJ4"
